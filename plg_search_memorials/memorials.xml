<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>plg_search_memorials</name>
	<author>JoomPlace Team</author>
	<creationDate>June 2020</creationDate>
	<copyright>(C) JoomPlace, www.joomplace.com</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>support@joomplace.com</authorEmail>
	<authorUrl>www.joomplace.com</authorUrl>
	<version>2.1.1</version>
	<description>PLG_SEARCH_MEMORIALS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="memorials">memorials.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_search_memorials.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_memorials.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="search_limit"
					type="number"
					label="PLG_SEARCH_MEMORIALS_FIELD_SEARCHLIMIT_LABEL"
					description="PLG_SEARCH_MEMORIALS_FIELD_SEARCHLIMIT_DESC"
					default="50"
					filter="integer"
					size="5"
				/>
				<field
					name="search_comments"
					type="radio"
					label="PLG_SEARCH_MEMORIALS_FIELD_SEARCHCOMMENTS_LABEL"
					description="PLG_SEARCH_MEMORIALS_FIELD_SEARCHCOMMENTS_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					filter="integer"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="search_fields"
					type="radio"
					label="PLG_SEARCH_MEMORIALS_FIELD_SEARCHFIELDS_LABEL"
					description="PLG_SEARCH_MEMORIALS_FIELD_SEARCHFIELDS_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					filter="integer"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="search_category"
						type="radio"
						label="PLG_SEARCH_MEMORIALS_FIELD_SEARCHCATEGORY_LABEL"
						description="PLG_SEARCH_MEMORIALS_FIELD_SEARCHCATEGORY_DESC"
						class="btn-group btn-group-yesno"
						default="1"
						filter="integer"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>